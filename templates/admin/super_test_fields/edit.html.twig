{% extends 'admin/base.html.twig' %}

{% block title %}Edit Super Test Field{% endblock %}

{% block body %}
<div class="space-y-8">
    <section class="flex flex-wrap items-center justify-between gap-4 rounded-[32px] bg-white/80 p-6 shadow-xl shadow-slate-900/5 ring-1 ring-white/70 backdrop-blur dark:bg-slate-900/70 dark:ring-white/10">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-500 dark:text-slate-400">Editar registro</p>
            <h1 class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
                Super Test Field #{{ super_test_field.id }}
            </h1>
            <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">Atualize as informações e salve para aplicar as alterações.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            <sl-button variant="default" outline href="{{ path('app_admin_super_test_fields_index') }}">
                <sl-icon slot="prefix" name="arrow-left"></sl-icon>
                Voltar
            </sl-button>
            <sl-button variant="danger" outline onclick="document.getElementById('delete-super-test-field-form').requestSubmit()">
                <sl-icon slot="prefix" name="trash"></sl-icon>
                Remover
            </sl-button>
        </div>
    </section>

    <sl-card class="border-none bg-white/85 shadow-lg shadow-slate-900/5 ring-1 ring-white/70 backdrop-blur dark:bg-slate-900/70 dark:ring-white/10">
        {{ include('admin/super_test_fields/_form.html.twig', {'button_label': 'Atualizar'}) }}
    </sl-card>

    <form id="delete-super-test-field-form" method="post" action="{{ path('app_admin_super_test_fields_delete', {'id': super_test_field.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ super_test_field.id) }}">
    </form>
</div>
{% endblock %}
