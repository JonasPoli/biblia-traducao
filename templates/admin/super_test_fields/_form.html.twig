{% set entity = super_test_field ?? form.vars.data %}

{{ form_start(form, {'attr': {'class': 'crud-form'}}) }}
<div class="crud-form__grid grid grid-cols-1 gap-6 md:grid-cols-2">
    <div class="crud-form__field">
        <label for="{{ form.SimpleInputText.vars.id }}" class="form-label">Texto Simples</label>
        {{ form_widget(form.SimpleInputText, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.SimpleInputText) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.emailField.vars.id }}" class="form-label">Email</label>
        {{ form_widget(form.emailField, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.emailField) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.numeroSimples.vars.id }}" class="form-label">Número Simples</label>
        {{ form_widget(form.numeroSimples, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.numeroSimples) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.DateField.vars.id }}" class="form-label">Data</label>
        {{ form_widget(form.DateField, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.DateField) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.DateAndTimeField.vars.id }}" class="form-label">Data e Hora</label>
        {{ form_widget(form.DateAndTimeField, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.DateAndTimeField) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.ChoiceTypeFromList.vars.id }}" class="form-label">Lista de Opções</label>
        {{ form_widget(form.ChoiceTypeFromList, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.ChoiceTypeFromList) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.ChoiceTypeFromEntity.vars.id }}" class="form-label">Entidade Relacionada</label>
        {{ form_widget(form.ChoiceTypeFromEntity, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.ChoiceTypeFromEntity) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.SelectEnum.vars.id }}" class="form-label">Idioma</label>
        {{ form_widget(form.SelectEnum, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.SelectEnum) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.imageFile.vars.id }}" class="form-label">Imagem</label>
        {{ form_widget(form.imageFile) }}
        {% if entity and entity.image %}
            <img class="mt-3 rounded" src="{{ vich_uploader_asset(entity, 'imageFile') }}" width="160" />
        {% endif %}
        {{ form_errors(form.imageFile) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.SinNaoInt.vars.id }}" class="form-label">Ativado (Sim/Não)</label>
        {{ form_widget(form.SinNaoInt, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.SinNaoInt) }}
    </div>

    <div class="crud-form__field">
        <label for="{{ form.BooleanTrueFalse.vars.id }}" class="form-label">Booleano Verdadeiro/Falso</label>
        {{ form_widget(form.BooleanTrueFalse, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.BooleanTrueFalse) }}
    </div>

    <div class="crud-form__field field-wide md:col-span-2">
        <label for="{{ form.EditTextWithEditor.vars.id }}" class="form-label">Editor de Texto</label>
        {{ form_widget(form.EditTextWithEditor, {'attr': {'class': 'form-control editor'}}) }}
        {{ form_errors(form.EditTextWithEditor) }}
    </div>
</div>

<div class="crud-form__actions">
    <sl-button variant="default" outline href="{{ path('app_admin_super_test_fields_index') }}">
        <sl-icon slot="prefix" name="arrow-left"></sl-icon>
        Cancelar
    </sl-button>
    <sl-button variant="primary" type="submit">
        <sl-icon slot="prefix" name="check2"></sl-icon>
        {{ button_label|default('Salvar') }}
    </sl-button>
</div>

<script src="https://cdn.tiny.cloud/1/fcs9plrzts8amx5w8gl9gfzn9qsyg47hdbtc171zu8o9yoqd/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        menubar: false,
        selector: 'textarea.editor',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
        toolbar: 'undo redo | fontsize | bold italic underline strikethrough | numlist bullist | removeformat',
    });
</script>

{{ form_end(form) }}
