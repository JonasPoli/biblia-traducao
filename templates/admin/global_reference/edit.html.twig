{% extends 'admin/base.html.twig' %}

{% block title %}Editar Referência Global{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('app_global_reference_index') }}" class="text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 flex items-center gap-2">
            <sl-icon name="arrow-left"></sl-icon> Voltar para lista
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-1">
            <div class="bg-white dark:bg-slate-800 rounded-lg shadow p-6 sticky top-24">
                <h1 class="text-2xl font-bold text-slate-800 dark:text-white mb-6">Editar Referência</h1>
                <form method="post">
                    {% include 'admin/global_reference/_form.html.twig' %}
                </form>
            </div>
        </div>

        <div class="lg:col-span-2">
            <div class="bg-white dark:bg-slate-800 rounded-lg shadow p-6">
                <h2 class="text-xl font-bold text-slate-800 dark:text-white mb-4">Versículos Afetados (Preview)</h2>
                <p class="text-sm text-slate-500 dark:text-slate-400 mb-6">
                    Versículos que contêm o termo "{{ reference.term }}" na versão de referência (ID 17).
                </p>

                {% for bookName, verses in groupedVerses %}
                    <div class="mb-6">
                        <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-200 mb-3 border-b border-slate-200 dark:border-slate-700 pb-2">
                            {{ bookName }}
                        </h3>
                        <div class="space-y-3">
                            {% for verseText in verses %}
                                <div class="flex items-start gap-4 p-3 rounded bg-slate-50 dark:bg-slate-700/50 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors">
                                    <div class="flex-none pt-1">
                                        <span class="inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-slate-100 bg-slate-600 rounded">
                                            {{ verseText.verse.book.abbreviation }} {{ verseText.verse.chapter }}:{{ verseText.verse.verse }}
                                        </span>
                                    </div>
                                    <div class="flex-grow text-slate-700 dark:text-slate-300 text-sm">
                                        {{ verseText.text|replace({(reference.term): '<span class="bg-yellow-200 dark:bg-yellow-900 dark:text-white font-bold px-1 rounded">' ~ reference.term ~ '</span>'})|raw }}
                                    </div>
                                    <div class="flex-none">
                                        <a href="{{ path('app_translation_chapter', {bookId: verseText.verse.book.id, chapter: verseText.verse.chapter}) }}#verse-{{ verseText.verse.verse }}" target="_blank">
                                            <sl-button size="small" circle>
                                                <sl-icon name="pencil" label="Editar"></sl-icon>
                                            </sl-button>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <div class="text-center py-8 text-slate-500 dark:text-slate-400">
                        Nenhum versículo encontrado com este termo.
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
