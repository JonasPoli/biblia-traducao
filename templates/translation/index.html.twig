{% extends 'admin/base.html.twig' %}

{% block title %}{{ book.name }} {{ chapter }} - Tradução{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8 flex items-center gap-4 sticky top-0 bg-white z-10 py-4 border-b">
        <a href="{{ path('app_dashboard_chapters', {id: book.id}) }}" class="text-blue-600 hover:text-blue-800">
            &larr; Voltar
        </a>
        <h1 class="text-3xl font-bold text-gray-800">{{ book.name }} {{ chapter }}</h1>
    </div>

    <div class="space-y-4">
        {% for item in verses %}
            <div class="bg-white rounded-lg shadow-sm p-4 border border-gray-200" id="verse-{{ item.verse.id }}">
                <div class="flex justify-between items-start mb-2">
                    <h2 class="text-md font-bold text-gray-900">
                        <a href="{{ path('app_translation_verse', {bookId: book.id, chapter: chapter, verseNum: item.verse.verse}) }}" class="hover:text-blue-600 hover:underline">
                            {{ book.name }} {{ chapter }}:{{ item.verse.verse }}
                        </a>
                    </h2>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                    {# Left Column: Source Texts #}
                    <div class="space-y-2">
                        {% if item.original %}
                            <div class="bg-gray-50 p-2 rounded border border-gray-200">
                                <h3 class="text-[10px] font-semibold text-gray-500 uppercase mb-1">Original ({{ item.original.version.name }})</h3>
                                <p class="font-serif text-base leading-relaxed">{{ item.original.text|raw }}</p>
                            </div>
                        {% endif %}

                        {% if item.reference %}
                            <div class="bg-blue-50 p-2 rounded border border-blue-100">
                                <h3 class="text-[10px] font-semibold text-blue-500 uppercase mb-1">Referência ({{ item.reference.version.name }})</h3>
                                <p class="text-gray-800 text-base leading-relaxed">{{ item.reference.text|raw }}</p>
                            </div>
                        {% endif %}
                    </div>

                    {# Right Column: Translation Display #}
                    <div>
                        <h3 class="text-[10px] font-semibold text-green-600 uppercase mb-1">Tradução (Haroldo Dutra)</h3>
                        <div class="p-2 border border-green-100 rounded bg-green-50/30 min-h-[4rem]">
                            {% if item.target %}
                                <div class="text-gray-900 text-base leading-relaxed">{{ item.target.text|raw }}</div>
                            {% else %}
                                <span class="text-gray-400 italic text-sm">Sem tradução</span>
                            {% endif %}
                        </div>
                        <div class="mt-1 text-right">
                             <a href="{{ path('app_translation_verse', {bookId: book.id, chapter: chapter, verseNum: item.verse.verse}) }}" class="text-xs text-blue-600 hover:underline">
                                Editar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
