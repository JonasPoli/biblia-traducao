{% extends 'admin/base.html.twig' %}

{% block title %}{{ book.name }} {{ chapter }} - Tradução{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8 flex items-center gap-4 sticky top-0 bg-white z-10 py-4 border-b">
        <a href="{{ path('app_dashboard_chapters', {id: book.id}) }}" class="text-blue-600 hover:text-blue-800">
            &larr; Voltar
        </a>
        <h1 class="text-3xl font-bold text-gray-800">{{ book.name }} {{ chapter }}</h1>
    </div>

    {# Bible Layout #}
    <div class="max-w-4xl mx-auto bg-white shadow-lg p-8 md:p-12 min-h-screen">
        {# Header #}
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold font-serif text-gray-900 mb-2">{{ book.name }}</h1>
        </div>

        {# Content #}
        <div class="md:columns-2 gap-8 text-justify font-serif text-lg leading-relaxed text-gray-800 space-y-4">
            {% for item in verses %}
                {% if loop.first %}
                    <div class="inline">
                        <span class="float-left text-7xl font-bold leading-[0.8] mr-2 mt-1 font-serif text-gray-900">{{ chapter }}</span>
                        <a href="{{ path('app_translation_verse', {bookId: book.id, chapter: chapter, verseNum: item.verse.verse}) }}" 
                           class="font-bold text-lg align-top mr-1 text-black hover:text-blue-600 select-none transition-colors"
                           title="Editar Versículo {{ item.verse.verse }}">
                            {{ item.verse.verse }}
                        </a>
                        {{ item.processed_text|raw }}
                    </div>
                {% else %}
                    <a href="{{ path('app_translation_verse', {bookId: book.id, chapter: chapter, verseNum: item.verse.verse}) }}" 
                       class="font-bold text-lg align-top mr-1 text-black hover:text-blue-600 select-none transition-colors"
                       title="Editar Versículo {{ item.verse.verse }}">
                        {{ item.verse.verse }}
                    </a>
                    {{ item.processed_text|raw }}
                {% endif %}
            {% endfor %}
        </div>

        {# Footnotes #}
        {% if footnotes|length > 0 %}
            <div class="mt-16 pt-8 border-t border-gray-300">
                <h3 class="text-sm font-bold text-gray-500 uppercase mb-4">Notas de Rodapé</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-1 text-sm text-gray-600 font-serif leading-tight">
                    {% for note in footnotes %}
                        <div id="footnote-{{ note.id }}" class="group">
                            <span class="font-bold text-gray-900">{{ note.verse }}:</span>
                            <span class="font-bold text-xs align-top text-blue-600">{{ note.id }}</span>
                            <span class="font-bold">{{ note.term }}</span>
                            {{ note.text|raw }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
