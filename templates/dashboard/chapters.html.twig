{% extends 'admin/base.html.twig' %}

{% block title %}{{ book.name }} - Capítulos{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8 flex items-center gap-4">
        <a href="{{ path('app_dashboard') }}" class="text-blue-600 hover:text-blue-800">
            &larr; Voltar
        </a>
        <h1 class="text-3xl font-bold text-gray-800">{{ book.name }}</h1>
        <span class="text-lg font-medium text-gray-500 bg-gray-100 px-3 py-1 rounded">{{ book.abbreviation }}</span>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for chapter in chapters %}
            {% set percentage = chapter.total > 0 ? (chapter.translated / chapter.total * 100)|round(1) : 0 %}
            
            <a href="{{ path('app_translation_chapter', {bookId: book.id, chapter: chapter.chapter}) }}" class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden border border-gray-100">
                <div class="p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-semibold text-gray-900">Capítulo {{ chapter.chapter }}</h2>
                    </div>

                    <div class="mb-2 flex justify-between text-sm text-gray-600">
                        <span>Progresso</span>
                        <span class="font-medium">{{ percentage }}%</span>
                    </div>

                    <div class="w-full bg-gray-200 rounded-full h-2.5 mb-4">
                        <div class="bg-blue-600 h-2.5 rounded-full" style="width: {{ percentage }}%"></div>
                    </div>

                    <div class="text-xs text-gray-500 flex justify-between">
                        <span>{{ chapter.translated }} traduzidos</span>
                        <span>Total: {{ chapter.total }}</span>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
</div>
{% endblock %}
